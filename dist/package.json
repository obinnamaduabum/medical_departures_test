{
  "name": "backend",
  "version": "0.0.1",
  "description": "backend api service",
  "main": "dist/server.js",
  "scripts": {
    "tsc": "tsc -p .",
    "dist-test": "tsc && NODE_ENV=development node server.js",
    "start": "tsc && cp -rv src/assets dist/ && NODE_ENV=production node dist/server.js",
    "dev-start": "tsc -p . && npm run-script copy-files && npm run-script copy-files-package-json && NODE_ENV=development node dist/server.js",
    "prod-start": "NODE_ENV=production node dist/server.js",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "dev": "NODE_ENV=development nodemon src/server.ts",
    "x": "NODE_ENV=developmen node --max-old-space-size=1024 src/server.ts",
    "start-build": "tsc && NODE_ENV=production node dist/server.js",
    "build": "tsc -p . && npm run-script copy-files && npm run-script copy-files-package-json",
    "fake-prod-build": "pm2 start eco.config.js --update-env --env production",
    "copy-files": "cp -rv src/assets dist/",
    "copy-files-package-json": "cp -rv package.json dist/",
    "deploy": "serverless deploy --stage dev --verbose"
  },
  "keywords": [
    "backend",
    "api",
    "restful"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git://github.com/username/repository.git"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/mocha": "^8.2.3",
    "@types/node": "^18.15.1",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "copyfiles": "^2.1.1",
    "mocha": "^9.0.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/dotenv-flow": "^3.0.0",
    "@types/express": "^4.17.1",
    "@types/validator": "^13.7.13",
    "aws-serverless-express": "^3.4.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.1.0",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "ip": "^1.1.5",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^3.2.0",
    "nodemon": "^2.0.12",
    "psl": "^1.7.0",
    "sequelize": "^6.29.3",
    "sequelize-typescript": "^2.1.5",
    "serverless": "^3.28.1",
    "swagger-ui-express": "^4.6.2",
    "ts-node": "^8.3.0",
    "uuid": "^8.3.2",
    "serverless-http": "^3.2.0"
  }
}
